<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="2dp"
    android:padding="2dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/first_letter_name_item"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="@string/single_letter_sample"
            android:textColor="@color/white"
            android:background="@drawable/rectangle_text"
            android:gravity="center"
            android:layout_marginHorizontal="2dp"
            android:textSize="24sp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/classroom_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/classroom_name"
                android:layout_marginHorizontal="4dp"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/classroom_item_description"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="4dp"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:textColor="@color/grayDark"
                android:textSize="15sp" />


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>


    <View style="@style/view_divider_style" />


</androidx.appcompat.widget.LinearLayoutCompat>