<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="2dp"
    android:orientation="vertical"
    android:padding="2dp">


    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginHorizontal="4dp"
        app:cardCornerRadius="4dp"
        app:strokeColor="@color/iron_white"
        app:strokeWidth="2dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_pic_chat"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:src="@drawable/ic_person"
                android:visibility="gone"
                app:civ_border_color="@color/black_night"
                app:civ_border_width="0.5dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/first_letter_name_item"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="2dp"
                android:background="@drawable/rectangle_text"
                android:gravity="center"
                android:text="@string/single_letter_sample"
                android:textColor="@color/lynx_white"
                android:textSize="24sp"
                android:visibility="visible" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/chat_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:text="@string/classroom_name"
                    android:textColor="@color/black_night"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/chat_item_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:text="@string/description"
                    android:textColor="@color/grayDark"
                    android:textSize="15sp" />


            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/chat_item_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginHorizontal="4dp"
            android:text="@string/ago_sample"
            android:textColor="@color/grayDark"
            android:textSize="15sp" />

    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>


</androidx.appcompat.widget.LinearLayoutCompat>